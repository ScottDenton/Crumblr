<%= form_with(model: post, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class = 'form-group'>
    <%= form.label :kind %> <br>
    <%= form.select :kind, ['text', 'image'],{} , class: 'custom-select custom-select-sm' %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Save new post", class:"btn btn-primary" %>
  </div>
  
<% end %>
